<Window x:Class="TodoListProj.ToDoList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To-Do List" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Grid Width="300" Height="30" Margin="10">
                <TextBlock x:Name="PlaceholderTextBlock" Text="Enter a new task"
                           VerticalAlignment="Center" Foreground="Gray"
                           Margin="5,0" IsHitTestVisible="False"
                           Visibility="Visible"/>
                <TextBox x:Name="TaskInput" Width="300" Height="30"
                         VerticalAlignment="Center" 
                         Margin="5,0"
                         TextChanged="TaskInput_TextChanged"/>
            </Grid>

            <Button Content="Add Task" Width="100" Height="30" Margin="10" Click="AddTask_Click"/>
            <Button Content="Edit Task" Width="100" Height="30" Margin="10" Click="EditTask_Click"/>
            <Button Content="Mark as Complete" Width="150" Height="30" Margin="10" Click="MarkAsComplete_Click"/>
            <Button Content="Remove Selected Task" Width="150" Height="30" Margin="10" Click="RemoveTask_Click"/>

            <ListBox x:Name="TaskList" Width="300" Height="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
